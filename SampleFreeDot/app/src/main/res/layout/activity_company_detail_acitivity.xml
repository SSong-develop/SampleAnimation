<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_color"
        tools:context=".presentation.activity.CompanyDetailAcitivity">

        <LinearLayout
            android:id="@+id/text_field1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:gravity="center"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="구골"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/company_recruit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="모집조건"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/company_recruit_txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="모집기간 : 2020.12.01~2020.12.20"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/company_recruit_txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="인원 : 0명"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/company_recruit_txt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="성별 : 무관"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/company_recruit_txt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="연령 : 무관"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/company_recruit_txt5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="학력 : 무관"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/text_field2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:gravity="center"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/text_field1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/company_recruit_txt6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="근무조건"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/company_recruit_txt7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="급여 : 건당 800원"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/company_recruit_txt8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="작업기간 : 2020.12.20 ~ 2020.12.30"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/company_recruit_txt9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="직종 : 프로그래밍"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/company_recruit_txt10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="고용형태 : 프리랜서"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/company_recruit_txt11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="복리후생 : 4대보험"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/text_field3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:gravity="center"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/text_field2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/company_recruit_txt12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="상세요강"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/company_recruit_txt13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1. 인터넷 잘하는 사람"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/company_recruit_txt14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="2. 열정과 끈기가 있는 사람"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/company_recruit_txt15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="3. 사교성 좋은 사람"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/company_recruit_txt16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="4. 프로그램 잘 다루는 사람"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:textSize="12sp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>